{
  "editor.rulers": [79],

  "files.exclude": {
    "**/.git": true,
    "**/.mypy_cache": true,
    "**/*.pyc": {"when": "$(basename).py"},
    "**/__pycache__": true,
    "**/.ropeproject": true
  },

  "python.analysis.diagnosticSeverityOverrides": {
    "reportMissingImports": "none",
    "reportUndefinedVariables": "none"
  }
}
